<%- include('./partials/header'); -%>
    <h1>Hello</h1>
    <p><%= homeStartingContent %></p>
    <% posts.forEach(post => { %>
        <h1><%=post.title%></h1>
        <% if (post.content.length > 100) { %>
            <p><%=post.content.substring(0, 100)%> ... <a href="/posts/<%=post.href%>">Read More</a></p>
        <% } else { %>
            <p><%=post.content%></p>
        <% } %>
    <% }) %>
<%- include('./partials/footer'); -%>
